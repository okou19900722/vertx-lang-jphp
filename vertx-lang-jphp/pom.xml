<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <!--<groupId>tk.okou</groupId>-->
        <groupId>io.vertx</groupId>
        <artifactId>vertx-base-stack</artifactId>
        <version>3.6.0-SNAPSHOT</version>
        <relativePath></relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>vertx-lang-jphp</artifactId>
    <version>3.6.0-SNAPSHOT</version>

    <properties>
        <asciidoc.path>/php</asciidoc.path>
        <stack.version>3.6.0-SNAPSHOT</stack.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>tk.okou</groupId>
            <artifactId>vertx-lang-php-compiler-jphp</artifactId>
            <version>${stack.version}</version>
        </dependency>
        <dependency>
            <groupId>tk.okou</groupId>
            <artifactId>vertx-lang-php-jphp-codegen</artifactId>
            <version>${stack.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.6</version>
            <scope>system</scope>
            <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/php</directory>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
            </resource>
            <resource>
                <directory>${project.basedir}/src/main/extension</directory>
            </resource>
            <resource>
                <directory>${project.basedir}/src/test/php</directory>
            </resource>
            <resource>
                <directory>${project.basedir}/src/test/resources</directory>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/main/generated</source>
                                <source>src/main/data</source>
                                <source>src/main/api</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <!--<configuration>-->
                <!--<includeGroupIds>io.vertx</includeGroupIds>-->
                <!--<includeArtifactIds>-->
                <!--vertx-core,-->
                <!--vertx-web-->
                <!--</includeArtifactIds>-->
                <!--<classifier>sources</classifier>-->
                <!--<includeTypes>jar</includeTypes>-->
                <!--</configuration>-->
                <executions>
                    <execution>
                        <id>unpack-sources</id>
                    </execution>
                    <execution>
                        <id>unpack-asciidoc</id>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <additionalClasspathElements>
                        <additionalClasspathElement>${project.build.testSourceDirectory}</additionalClasspathElement>
                    </additionalClasspathElements>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>rename-asciidoc</id>
                    </execution>
                    <execution>
                        <id>copy-asciidoc-override</id>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.bsc.maven</groupId>
                <artifactId>maven-processor-plugin</artifactId>
                <executions>
                    <execution>
                        <id>generate-sources</id>
                    </execution>
                    <execution>
                        <id>generate-doc</id>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-docs</id>
                    </execution>
                    <execution>
                        <id>assemble-docs</id>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-clean</id>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>${project.basedir}/src/main/php</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/extension</directory>
                                </fileset>
                                <fileset>
                                    <directory>${project.basedir}/src/main/api</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>